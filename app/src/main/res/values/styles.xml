<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_corner_32">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginBottom">120dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/corner_32</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="next_btn">
        <item name="android:tint">@color/black_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="screen_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="auth_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:background">@drawable/stroke_corner_32</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">@color/gray_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bold_16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/gray_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="stroke_32dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:background">@drawable/stroke_corner_32</item>
        <item name="android:textColor">@color/gray_color</item>
    </style>

    <style name="medium_16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>